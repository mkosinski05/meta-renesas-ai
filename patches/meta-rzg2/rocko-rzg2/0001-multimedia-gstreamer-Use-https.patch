From 908bf3848f65db16ac8a1b33acb092bcc922009c Mon Sep 17 00:00:00 2001
From: Gareth Williams <gareth.williams.jx@renesas.com>
Date: Wed, 19 Jan 2022 10:33:30 +0000
Subject: [PATCH] multimedia: gstreamer: Use https

The unauthenticated git protocol is no longer supported by github
so we should use https for do_fetch stages.

Signed-off-by: Gareth Williams <gareth.williams.jx@renesas.com>
---
 recipes-multimedia/gstreamer/gstreamer1.0-plugins-bad_1.12.2.bbappend  | 2 +-
 recipes-multimedia/gstreamer/gstreamer1.0-plugins-good_1.12.2.bbappend | 2 +-
 2 files changed, 2 insertions(+), 2 deletions(-)

diff --git a/recipes-multimedia/gstreamer/gstreamer1.0-plugins-bad_1.12.2.bbappend b/recipes-multimedia/gstreamer/gstreamer1.0-plugins-bad_1.12.2.bbappend
index 01f45c2..20cd04c 100644
--- a/recipes-multimedia/gstreamer/gstreamer1.0-plugins-bad_1.12.2.bbappend
+++ b/recipes-multimedia/gstreamer/gstreamer1.0-plugins-bad_1.12.2.bbappend
@@ -1,7 +1,7 @@
 FILESEXTRAPATHS_prepend := "${THISDIR}/${PN}/:"
 SRC_URI_remove = "http://gstreamer.freedesktop.org/src/gst-plugins-bad/gst-plugins-bad-${PV}.tar.xz"
 SRC_URI_append = " \
-    git://github.com/renesas-rcar/gst-plugins-bad.git;branch=RCAR-GEN3/1.12.2;name=base \
+    git://github.com/renesas-rcar/gst-plugins-bad.git;protocol=https;branch=RCAR-GEN3/1.12.2;name=base \
     git://anongit.freedesktop.org/gstreamer/common;destsuffix=git/common;name=common \
 "
 
diff --git a/recipes-multimedia/gstreamer/gstreamer1.0-plugins-good_1.12.2.bbappend b/recipes-multimedia/gstreamer/gstreamer1.0-plugins-good_1.12.2.bbappend
index c2c4012..60982ea 100644
--- a/recipes-multimedia/gstreamer/gstreamer1.0-plugins-good_1.12.2.bbappend
+++ b/recipes-multimedia/gstreamer/gstreamer1.0-plugins-good_1.12.2.bbappend
@@ -1,7 +1,7 @@
 FILESEXTRAPATHS_prepend := "${THISDIR}/${PN}/:"
 SRC_URI_remove = "http://gstreamer.freedesktop.org/src/gst-plugins-good/gst-plugins-good-${PV}.tar.xz"
 SRC_URI_append = " \
-    git://github.com/renesas-rcar/gst-plugins-good.git;branch=RCAR-GEN3/1.12.2;name=base \
+    git://github.com/renesas-rcar/gst-plugins-good.git;protocol=https;branch=RCAR-GEN3/1.12.2;name=base \
     git://anongit.freedesktop.org/gstreamer/common;destsuffix=git/common;name=common \
 "
 
